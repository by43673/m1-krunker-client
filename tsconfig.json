{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitAny": true,
		"sourceMap": false,
		"outDir": "app",
		"baseUrl": ".",
		"target": "es2021",
		"strict": false,
		"paths": {
			"*": [
				"node_modules/*"
			]
		},
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"dist/*",
		"app/*"
	]
}